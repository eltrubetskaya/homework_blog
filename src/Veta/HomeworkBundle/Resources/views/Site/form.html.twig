{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:{{ action }}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'VetaHomeworkBundle:Site:navbar.html.twig' with {'active': li_active } %}
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">

            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

            <div class="alert alert-warning" role="alert">
                {{ form_start(form) }}
                <div class="form-group">
                    <div class="col-lg-12">
                        <strong>{{ action }}</strong>
                        <span class="glyphicon glyphicon-edit pull-right" aria-hidden="true"></span>
                     </div>
                </div>
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">{{ action }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            {% if entity is defined %}
                <div class="alert alert-danger" role="alert">
                    <form action="{{ path(route, { 'id': id }) }}" method="post">
                        <input type="hidden" name="_method" id="_method" value="DELETE">
                        <a style="cursor: pointer"  onclick="$(this).closest('form').submit()" type="button" class="alert-link" title="Delete this {{ entity }}">
                            <strong>Delete this {{ entity }}</strong>
                            <span class="glyphicon glyphicon-remove pull-right" aria-hidden="true"></span>
                        </a>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

